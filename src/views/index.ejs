<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJS Basic</title>
    <link rel="stylesheet" href="/css/style.css">

</head>

<body>

    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <div class="container">
        <h2>List User</h2>
        <table>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Points</th>
            </tr>
            <% for(let i=0; i < data.length; i++) { %>
                <tr>
                    <td>
                        <%= data[i].id %>
                    </td>
                    <td>
                        <%= data[i].firstName %>
                    </td>
                    <td>
                        <%= data[i].lastName %>
                    </td>
                    <td>
                        <a href="detail/user/<%= data[i].id %>" target="_blank">Detail</a>
                        <a href="/edit-user/<%= data[i].id %>">Edit</a>
                        <form action="/delete-user" method="post">
                            <input type="hidden" name="userId" value="<%= data[i].id %>">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% } %>

        </table>
    </div>

    <div class="create-user-container">
        <div class="">Create new user:</div>
        <form action="/create-new-user" method="post">
            <label for="fname">First name:</label><br>
            <input type="text" id="fname" name="firstName" value=""><br>
            <label for="lname">Last name:</label><br>
            <input type="text" id="lname" name="lastName" value=""><br>
            <label for="lname">Email</label><br>
            <input type="email" id="lname" name="email" value=""><br>
            <label for="lname">Address</label><br>
            <input type="text" id="lname" name="address" value=""><br>
            <input class="btn-submit" type="submit" value="Submit">
        </form>
    </div>

</body>

</html>